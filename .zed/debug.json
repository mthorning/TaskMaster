// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "List tasks",
    "build": {
      "command": "cargo",
      "args": ["build"],
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/taskmaster",
    "args": ["tasks", "list"],
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB",
  },
  {
    "label": "Edit Task",
    "build": {
      "command": "cargo",
      "args": ["build"],
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/taskmaster",
    "args": ["tasks", "edit", "ell"],
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB",
  },
]
